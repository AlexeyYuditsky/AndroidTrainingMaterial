<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.alexeyyuditsky.test.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_secondAFragment"
            app:destination="@id/secondAFragment" />
        <action
            android:id="@+id/action_mainFragment_to_secondBFragment"
            app:destination="@id/secondBFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondAFragment"
        android:name="com.alexeyyuditsky.test.SecondAFragment"
        android:label="fragment_second_a"
        tools:layout="@layout/fragment_second_a" >
        <action
            android:id="@+id/action_secondAFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondBFragment"
        android:name="com.alexeyyuditsky.test.SecondBFragment"
        android:label="fragment_second_b"
        tools:layout="@layout/fragment_second_b" >
        <action
            android:id="@+id/action_secondBFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.alexeyyuditsky.test.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" />

</navigation>