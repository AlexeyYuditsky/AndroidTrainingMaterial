<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/liveDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            tools:text="Hello World!" />

        <Button
            android:id="@+id/liveDataButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LiveData" />

        <TextView
            android:id="@+id/stateFlowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            tools:text="Hello World!" />

        <Button
            android:id="@+id/stateFlowButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="StateFlow" />

        <TextView
            android:id="@+id/flowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            tools:text="Hello World!" />

        <Button
            android:id="@+id/flowButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Flow" />

        <TextView
            android:id="@+id/sharedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            tools:text="Hello World!" />

        <Button
            android:id="@+id/sharedFlowButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SharedFlow" />

    </LinearLayout>

</ScrollView>